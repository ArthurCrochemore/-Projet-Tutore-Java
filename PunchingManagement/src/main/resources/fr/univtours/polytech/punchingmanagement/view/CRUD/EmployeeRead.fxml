<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane prefHeight="400" prefWidth="520"
    xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="fr.univtours.polytech.punchingmanagement.controller.crud.EmployeeReadController"
    fx:id="root">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <center>
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="UUID" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label text="First name" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label text="Date of employment" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <Label text="Department" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <Label text="Hours worked" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <Label text="Hourly rate" GridPane.columnIndex="0" GridPane.rowIndex="7" />

                <Button fx:id="uuid" GridPane.columnIndex="1" GridPane.rowIndex="1" >
                    <tooltip><Tooltip text="Copy ID" /></tooltip>
                </Button>
                <Label fx:id="firstname" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label fx:id="lastname" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label fx:id="dateOfEmployment" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Button fx:id="department" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <tooltip><Tooltip text="Read Department" /></tooltip>
                </Button>
                <Label fx:id="hoursWorked" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <Label fx:id="hourCredit" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            </children>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" />
            </padding>
            <children>
                <Button fx:id="editButton" text="Edit" />
                <Button fx:id="deleteButton" text="Delete" />
            </children>
        </HBox>
    </bottom>
</BorderPane>